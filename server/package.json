{
  "name": "nft-toolkit-server",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s . -o ./build",
    "test": "yarn jest src/tests/",
    "start": "nodemon",
    "start-production": "node build/src/server.js",
    "compile": "yarn hardhat compile",
    "console": "yarn hardhat console",
    "soltest": "yarn hardhat coverage"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.0.0",
    "@ethersproject/bytes": "^5.0.0",
    "@ethersproject/providers": "^5.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "4.3.2",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.2.22",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/mocha": "^9.0.0",
    "@types/multer": "^1.4.7",
    "@types/multer-s3": "^2.7.10",
    "@types/node": "^16.9.2",
    "@types/supertest": "^2.0.11",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.7",
    "hardhat": "^2.6.5",
    "jest": "^27.3.1",
    "lodash": "^4.17.21",
    "mocha": "^9.1.2",
    "mongodb-memory-server": "^7.5.1",
    "node-fetch": "^2.6.1",
    "nodemon": "^2.0.13",
    "set-value": "^4.0.1",
    "solidity-coverage": "^0.7.17",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "tscpaths": "^0.0.9",
    "typechain": "^5.2.0",
    "typescript": "^4.4.4"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "execMap": {
      "ts": "node --require ts-node/register --require tsconfig-paths/register"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "build"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "moduleNameMapper": {
      "@models/(.*)": "<rootDir>/src/models/$1",
      "@routes/(.*)": "<rootDir>/src/routes/$1",
      "@controllers/(.*)": "<rootDir>/src/controllers/$1",
      "@validators/(.*)": "<rootDir>/src/validators/$1",
      "@server/(.*)": "<rootDir>/src/$1",
      "@tests/(.*)": "<rootDir>/src/tests/$1"
    },
    "coveragePathIgnorePatterns": [
      "smart-contracts",
      "tests"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "dependencies": {
    "ansi-regex": "^5.0.1",
    "aws-sdk": "^2.1013.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.13.0",
    "images": "^3.2.3",
    "mongodb": "^4.1.3",
    "mongoose": "^6.0.11",
    "multer": "^1.4.3",
    "multer-s3": "^2.10.0",
    "underscore": "^1.12.1",
    "yargs-parser": "^5.0.1"
  }
}
